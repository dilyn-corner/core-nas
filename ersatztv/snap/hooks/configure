#!/bin/sh -eux

_uiport="$(snapctl get port.ui)"
_strmport="$(snapctl get port.stream)"

[ -n "$_uiport"   ] || snapctl set port.ui=8409
[ -n "$_strmport" ] || snapctl set port.stream=8409

snapctl services "${SNAP_INSTANCE_NAME}.server" | grep -q disabled ||
snapctl restart  "${SNAP_INSTANCE_NAME}.server"
